<%= tailwind_form_with model: article do |form| %>
  <div class="space-y-12">
    <div class="border-b border-gray-900/10 pb-12">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Article Details</h2>
      <p class="mt-1 text-sm leading-6 text-gray-600">
        Please provide the details for your article.
      </p>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-4">
          <%= form.label :title, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
          <% article.errors.full_messages_for(:title).each do |message| %>
            <p class="mt-2 text-sm text-red-600"><%= message %></p>
          <% end %>
        </div>

        <div class="col-span-full">
          <%= form.label :body, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_area :body, rows: 3, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
          <% article.errors.full_messages_for(:body).each do |message| %>
            <p class="mt-2 text-sm text-red-600"><%= message %></p>
          <% end %>
          <p class="mt-3 text-sm leading-6 text-gray-600">Write your article content here.</p>
        </div>

        <div class="sm:col-span-3">
          <%= form.tailwind_select :status, 
              Visible::VALID_STATUSES.map { |status| [status.capitalize, status] },
              { label: "Publication status" } %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", articles_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
    <%= form.submit class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>
